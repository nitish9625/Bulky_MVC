
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4 mb-4">
        <div class="row pt-4">
            <div class="col-6 pb-3">
                <h2 class="text-primary">
                    Company List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Company" asp-action="Create"> <i class="bi bi-plus-circle"></i>Create New Company</a>
            </div>
        </div>
        <table id="companytblData" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Street Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postal Code</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>


@section Scripts{
    <script src="~/js/company.js"></script>
}

