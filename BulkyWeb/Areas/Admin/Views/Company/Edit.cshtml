@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Company</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 mt-4">
                <input asp-for="Id" hidden />
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Name" />
                    <label class="ms-2" asp-for="Name"></label>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="PhoneNumber" />
                    <label class="ms-2" asp-for="PhoneNumber"></label>
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="StreetAddress" />
                    <label class="ms-2" asp-for="StreetAddress"></label>
                    <span class="text-danger" asp-validation-for="StreetAddress"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="City" />
                    <label class="ms-2" asp-for="City"></label>
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="State" />
                    <label class="ms-2" asp-for="State"></label>
                    <span class="text-danger" asp-validation-for="State"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="PostalCode" />
                    <label class="ms-2" asp-for="PostalCode"></label>
                    <span class="text-danger" asp-validation-for="PostalCode"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Edit</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>

                </div>

            </div>
        </form>
    </div>


    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }

