@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 mt-4">
                <input hidden asp-for="Id"/>
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Title" />
                    <label class="ms-2" asp-for="Title"></label>
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Description" />
                    <label class="ms-2" asp-for="Description"></label>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="ISBN" />
                    <label class="ms-2" asp-for="ISBN"></label>
                    <span class="text-danger" asp-validation-for="ISBN"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Author" />
                    <label class="ms-2" asp-for="Author"></label>
                    <span class="text-danger" asp-validation-for="Author"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="ListPrice" />
                    <label class="ms-2" asp-for="ListPrice"></label>
                    <span class="text-danger" asp-validation-for="ListPrice"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea type="text" class="form-control border-0 shadow" asp-for="Description"> </textarea>
                    <label class="ms-2" asp-for="Description"></label>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Price" />
                    <label class="ms-2" asp-for="Price"></label>
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Price50" />
                    <label class="ms-2" asp-for="Price50"></label>
                    <span class="text-danger" asp-validation-for="Price50"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="Price100" />
                    <label class="ms-2" asp-for="Price100"></label>
                    <span class="text-danger" asp-validation-for="Price100"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>

                </div>


            </div>
        </form>
    </div>

</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

